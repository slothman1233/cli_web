{
    "apps": {
        "cwd": "./",
        "name": "koa_ts",
        "script": "src/bin/www.ts",
        "watch": true,
        "ignore_watch": [
            "node_modules",
            "logs",
            "test",
            "dist",
            "coverage"
        ],
        "env": {
            "NODE_ENV": "ga"
        },
        "instances": 1,
        "interpreter": "../node_modules/.bin/ts-node",
        "error_file": "./logs/pm2/err.log",
        "out_file": "./logs/pm2/out.log",
        "pid_file": "./logs/pm2/pid.log",
        "log_date_format": "YYYY-MM-DD HH:mm:ss",
        "merge_logs": true,
        "restart_delay": "60s",
        "min_uptime": "60s",
        "exec_mode": "cluster_mode",
        "cron_restart": "0 4 * * 0"
    }
}